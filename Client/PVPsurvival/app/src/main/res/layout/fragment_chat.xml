<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.belafon.pvpsurvival.TheGame.Fragments.ChatFragment"
    android:background="@color/transparent">
    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginRight="-50dp"
        android:background="@drawable/button"
        android:hint="@string/backtomenu"
        android:onClick="backToPreGame"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="21dp"
        android:background="@drawable/button"
        android:hint="@string/send_letter"
        android:onClick="send_letter"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <LinearLayout
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="TextView" />
        </ScrollView>
        <EditText
            android:id="@+id/chatEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#35ff35"/>
    </LinearLayout>

</FrameLayout>
